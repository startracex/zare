{
  "name": "zare-repo",
  "version": "0.0.0",
  "private": true,
  "description": "A file base component template engine",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "docs:start": "npm run -w zare-docs dev",
    "docs:build": "npm run -w zare-docs build",
    "cli:start": "npm run -w @zarejs/cli dev",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "licenses": "node scripts/copy-licenses.js",
    "prepare": "husky",
    "changeset": "changeset",
    "format": "dprint fmt",
    "format:check": "dprint check"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/config-conventional": "^20.0.0",
    "@manypkg/get-packages": "^3.0.0",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.6.2",
    "@vitest/coverage-v8": "^3.1.4",
    "commitlint": "^20.1.0",
    "dprint": "^0.50.2",
    "husky": "^9.1.7",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vitest": "^3.1.4"
  },
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "packageManager": "npm@11.4.2"
}
