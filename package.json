{
  "name": "zare-repo",
  "version": "0.0.0",
  "private": true,
  "description": "A file base component template engine",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "docs:start": "npm run -w zare-docs dev",
    "docs:build": "npm run -w zare-docs build",
    "cli:start": "npm run -w @zarejs/cli dev",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "licenses": "node scripts/copy-licenses.js",
    "prepare": "husky",
    "changeset": "changeset",
    "format": "oxfmt",
    "format:check": "oxfmt --check"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/config-conventional": "^20.3.1",
    "@manypkg/get-packages": "^3.0.0",
    "@types/express": "^5.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^4.0.17",
    "commitlint": "^20.3.1",
    "husky": "^9.1.7",
    "oxfmt": "^0.24.0",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3"
  },
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "packageManager": "npm@11.4.2"
}
