{
  "name": "@zarejs/ui",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "imports": {
    "#css/*": "./static/css/*",
    "#js/*": "./static/js/*",
    "#dist/*": "./static/dist/*"
  },
  "scripts": {
    "serve": "zare serve",
    "build:css": "tailwindcss -i ./static/css/input.css -o ./static/dist/output.css",
    "watch:css": "tailwindcss -i ./static/css/input.css -o ./static/dist/output.css --watch"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "tailwindcss": "^4.1.16"
  },
  "devDependencies": {
    "@zarejs/cli": "^1.3.1"
  }
}
